# WokGen Environment Variables
# Copy this file to .env.local and fill in the values you need.
# You only need to set the providers you want to use.

# ─── Application ─────────────────────────────────────────────────────────────

# Public URL of your WokGen instance (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ─── Database ────────────────────────────────────────────────────────────────

# SQLite (default, recommended for self-hosting)
DATABASE_URL="file:./wokgen.db"

# ─── Authentication (NextAuth.js) ────────────────────────────────────────────

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth (create at https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (optional — create at https://console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ─── AI Providers ────────────────────────────────────────────────────────────
# Set one or more. WokGen will use what's available, in priority order.

# Replicate (https://replicate.com — free credits for new users)
REPLICATE_API_TOKEN=

# Fal.ai (https://fal.ai)
FAL_KEY=

# Together.ai (https://together.ai)
TOGETHER_API_KEY=

# Local ComfyUI (leave blank to disable)
COMFYUI_HOST=http://127.0.0.1:8188

# ─── Storage ─────────────────────────────────────────────────────────────────

# Local filesystem storage (default)
STORAGE_DRIVER=local
STORAGE_LOCAL_DIR=./uploads

# OR: S3-compatible storage (set STORAGE_DRIVER=s3)
# STORAGE_DRIVER=s3
# S3_BUCKET=wokgen-assets
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_ENDPOINT=                  # Optional: for MinIO, Cloudflare R2, etc.
# S3_PUBLIC_URL=                # Optional: CDN prefix for public asset URLs

# ─── Feature Flags ───────────────────────────────────────────────────────────

# Allow anonymous (unauthenticated) generation with user-provided API key
NEXT_PUBLIC_ALLOW_ANONYMOUS=true

# Max concurrent generation jobs per user (0 = unlimited)
MAX_CONCURRENT_JOBS=3

# Generation timeout in seconds
GENERATION_TIMEOUT=120
