// WokGen Database Schema
// SQLite via Prisma — self-hosting friendly

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  jobs          Job[]
  apiKeys       ApiKey[]
  assets        GeneratedAsset[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ApiKey {
  id        String    @id @default(cuid())
  userId    String
  name      String    @default("Default")
  keyHash   String    @unique
  keyPrefix String    // First 8 chars of key for display
  createdAt DateTime  @default(now())
  lastUsed  DateTime?
  expiresAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// A generation job — one per user request
model Job {
  id         String    @id @default(cuid())
  userId     String?   // null = anonymous
  tool       String    // generate | animate | rotate | inpaint | scene
  status     String    @default("pending") // pending | running | done | failed
  prompt     String?
  negPrompt  String?
  params     String    // JSON blob of all generation params
  provider   String?   // replicate | fal | together | comfyui
  providerJobId String? // External job/prediction ID
  error      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  finishedAt DateTime?

  user   User?            @relation(fields: [userId], references: [id], onDelete: SetNull)
  assets GeneratedAsset[]
}

// A generated output image/animation
model GeneratedAsset {
  id          String   @id @default(cuid())
  jobId       String
  userId      String?
  url         String   // Storage URL (local path or S3 URL)
  width       Int?
  height      Int?
  format      String   @default("png") // png | gif | webp
  tool        String   // generate | animate | rotate | inpaint | scene
  prompt      String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())

  job  Job   @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
